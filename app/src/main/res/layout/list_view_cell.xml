<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFBF4"
    android:weightSum="1">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:contentDescription="img"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/subLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/subLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.76"
                android:minWidth="200dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#2f2f2f"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/distanceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#656565" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/subLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ratingImg"
                android:layout_width="98dp"
                android:layout_height="25dp"
                android:contentDescription="img"
                android:gravity="center" />

            <TextView
                android:id="@+id/ratingNumTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#656565" />

            <ImageView
                android:id="@+id/overflow"
                android:layout_width="28dp"
                android:layout_height="38dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/icon_overflow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addressTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#2f2f2f" />

            <TextView
                android:id="@+id/foodTypeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#656565" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>